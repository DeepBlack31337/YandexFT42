<?xml version="1.0" encoding="utf-8"?>
<ru.shaluny.yandexft.UI_model.main_page_view xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/mxlayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HELLO1"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card">
    <EditText
        android:id="@+id/editText"
        android:layout_width="360dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/HELLO1"
        android:layout_marginStart="13dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine" />
</android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/card2"
        android:layout_below="@+id/card">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/card"
        android:layout_alignStart="@+id/card"
        android:layout_below="@+id/card"
        android:layout_marginLeft="10dp"

        android:text="Перевод"
        android:textSize="20dp"
        android:textStyle="bold"/>
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible"
            android:id="@+id/progress2"/>

            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/card"
                android:layout_marginTop="80dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:scrollbars="vertical"
                    android:text="Аннотация"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:id="@+id/progress1" />
            </android.support.v7.widget.CardView>

        </android.support.v7.widget.CardView>
    </RelativeLayout>

</ru.shaluny.yandexft.UI_model.main_page_view>